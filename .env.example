# =============================================================================
# SentryAI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# LLM Configuration (Required)
# =============================================================================
# NVIDIA API Key for LLM access
NVIDIA_API_KEY=nvapi-xxx

# LLM Model Selection
# Common NVIDIA models:
#   - mistralai/mistral-large-3-675b-instruct-2512
#   - mistralai/mixtral-8x22b-instruct-v0.1
#   - meta/llama-3.1-70b-instruct
#   - google/gemma-2-27b-it
NVIDIA_MODEL=mistralai/mistral-large-3-675b-instruct-2512

# LLM API Base URL (OpenAI-compatible endpoint)
# Default: https://integrate.api.nvidia.com/v1
# For OpenAI: https://api.openai.com/v1
# For local/self-hosted: http://localhost:8000/v1
AI_BASE_URL=https://integrate.api.nvidia.com/v1

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=sentry
POSTGRES_PASSWORD=sentry_password
POSTGRES_DB=sentry_core
DATABASE_URL=postgresql://sentry:sentry_password@localhost:5432/sentry_core

# =============================================================================
# Neo4j Configuration
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sentry_password

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Weaviate Configuration
# =============================================================================
WEAVIATE_URL=http://localhost:8080

# =============================================================================
# Temporal Configuration
# =============================================================================
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# =============================================================================
# Application Ports (Optional - defaults shown)
# =============================================================================
PORT_API=8000
PORT_WEB=3000
PORT_NEO4J_UI=7474
PORT_TEMPORAL_UI=8233

# =============================================================================
# Integrations (Optional)
# =============================================================================
# Slack
SLACK_WEBHOOK_URL=

# Jira
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=

# Linear
LINEAR_API_KEY=
LINEAR_TEAM_ID=

# Discord
DISCORD_WEBHOOK_URL=

# =============================================================================
# Cognitive Budgets (Optional - defaults shown)
# =============================================================================
DEFAULT_MAX_STEPS=50
DEFAULT_MAX_COST_USD=5.00
DEFAULT_MAX_RUNTIME_MINUTES=60
